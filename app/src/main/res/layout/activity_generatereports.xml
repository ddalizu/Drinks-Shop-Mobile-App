<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    >

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALES REPORT"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- HEADQUARTER -->
    <TextView
        android:id="@+id/headquarter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEADQUARTER"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/headquarter_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL SALES:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/headquarter_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/headquarter_sales_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/headquarter_label"
        app:layout_constraintLeft_toRightOf="@id/headquarter_sales"
        android:layout_marginStart="8dp" />

    <!-- NAIROBI BRANCH -->
    <TextView
        android:id="@+id/nairobi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAIROBI BRANCH"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/headquarter_sales_value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/nairobi_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL SALES:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/nairobi_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/nairobi_sales_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/nairobi_label"
        app:layout_constraintLeft_toRightOf="@id/nairobi_sales"
        android:layout_marginStart="8dp" />

    <!-- KISUMU BRANCH -->
    <TextView
        android:id="@+id/kisumu_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KISUMU BRANCH"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/nairobi_sales_value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/kisumu_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL SALES:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/kisumu_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/kisumu_sales_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/kisumu_label"
        app:layout_constraintLeft_toRightOf="@id/kisumu_sales"
        android:layout_marginStart="8dp" />

    <!-- MOMBASA BRANCH -->
    <TextView
        android:id="@+id/mombasa_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOMBASA BRANCH"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/kisumu_sales_value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/mombasa_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL SALES:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/mombasa_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/mombasa_sales_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/mombasa_label"
        app:layout_constraintLeft_toRightOf="@id/mombasa_sales"
        android:layout_marginStart="8dp" />

    <!-- TOTAL COMPANY SALES -->
    <TextView
        android:id="@+id/total_company_sales_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL COMPANY SALES:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mombasa_sales_value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/total_company_sales_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="360dp"
        android:text="0.00"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/total_company_sales_label"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
